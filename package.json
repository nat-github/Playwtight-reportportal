{
  "name": "playwright-reportportal-framework",
  "version": "1.0.0",
  "description": "Playwright Framework with ReportPortal.io Integration",
  "scripts": {
    "install:all": "npm install && npx playwright install --with-deps",
    "test:web": "npx playwright test --project=web",
    "test:api": "npx playwright test --project=api",
    "test:all": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:reportportal": "cross-env REPORTPORTAL_ENABLED=true npx playwright test",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:smoke:web": "npx playwright test --project=web --grep @smoke",
    "test:regression:web": "npx playwright test --project=web --grep @regression",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup": "bash scripts/setup.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-playwright": "^0.1.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@reportportal/agent-js-playwright": "^5.3.2",
    "ajv": "^8.17.1"
  },
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}